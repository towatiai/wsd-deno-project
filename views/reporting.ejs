<%- include("./partials/header.ejs") %>
<div style="max-width: 600px;">

    <h1>Reporting</h1>

    <script src="/static/src/reporting.js" defer></script>

    <% if (hasMorningReport && hasEveningReport) { %>

    <div class="alert alert-success mt-3" role="alert">
        <h4 class="alert-heading">Well done!</h4>
        <p>You have submitted both morning and evening reports today. Way to go!</p>
        <hr>
        <p class="mb-0">You can still change your reports by resubmitting.</p>
    </div>

    <% } else if (hasMorningReport) { %>

    <div class="alert alert-info mt-3" role="alert">
        <h4 class="alert-heading">Morning report submitted!</h4>
        <p>You have submitted morning report for today. Remember to submit evening report too!</p>
        <hr>
        <p class="mb-0">You can still change your reports by resubmitting.</p>
    </div>

    <% } else if (hasEveningReport) { %>

    <div class="alert alert-info mt-3" role="alert">
        <h4 class="alert-heading">Evening report submitted!</h4>
        <p>You have submitted evening report for today. Consider submitting your morning report too!</p>
        <hr>
        <p class="mb-0">You can still change your reports by resubmitting.</p>
    </div>

    <% } %>

    <% if (submitSuccess) { %>

    <div class="alert alert-success" role="alert">
        Form submitted successfully!
    </div>

    <% } %>

    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link <%= active === "morning" ? "active" : "" %>" id="morning-tab" data-toggle="tab"
                href="#morning" role="tab" aria-controls="morning" aria-selected="true">Morning</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link <%= active === "evening" ? "active" : "" %>" id="evening-tab" data-toggle="tab"
                href="#evening" role="tab" aria-controls="evening" aria-selected="false">Evening</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <!-- Morning reporting-->
        <div class="tab-pane fade <%= active === "morning" ? "show active" : "" %>" id="morning" role="tabpanel"
            aria-labelledby="morning-tab">

            <%- include("./partials/morningReportForm.ejs", morningForm)  %>
        </div>

        <!-- Evening reporting -->
        <div class="tab-pane fade <%= active === "evening" ? "show active" : "" %>" id="evening" role="tabpanel"
            aria-labelledby="evening-tab">

            <%- include("./partials/eveningReportForm.ejs", eveningForm)  %>

        </div>

    </div>
</div>




</div>

<%- include("./partials/footer.ejs") %>